{
  "expo": {
    "name": "offer-catalog",
    "slug": "offer-catalog",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "assets/**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.offercatalog",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Allow $(PRODUCT_NAME) to access your photos to share catalogues.",
        "NSPhotoLibraryAddUsageDescription": "Allow $(PRODUCT_NAME) to save catalogue pages to your photo library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.yourcompany.offercatalog",
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.INTERNET"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-file-system",
        {
          "ios": {
            "NSPhotoLibraryUsageDescription": "Allow $(PRODUCT_NAME) to access your photos to share catalogues."
          },
          "android": {
            "permissions": [
              "READ_EXTERNAL_STORAGE",
              "WRITE_EXTERNAL_STORAGE"
            ]
          }
        }
      ],
      "expo-asset",
      "expo-localization",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "d348374e-ef60-41d7-8fb4-ed84ae0edff4"
      }
    }
  }
}